<Window x:Class="InternetMarket.TiviWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetMarket"
        mc:Ignorable="d"
        Title="TiviWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="firmtext" Grid.Column="0" Grid.Row="0" Margin="30"/>
        <TextBox Name="modeltext" Grid.Column="1" Grid.Row="0" Margin="30"/>
        <TextBox Name="quantitytext" Grid.Column="2" Grid.Row="0" Margin="30"/>
        <TextBox Name="costtext" Grid.Column="3" Grid.Row="0" Margin="30"/>
        <Button Name="btnset" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="40" Content="Set" Click="btnset_Click"/>
    </Grid>
</Window>
