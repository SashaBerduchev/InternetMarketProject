<Window x:Class="InternetMarket.LoginUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetMarket"
        mc:Ignorable="d"
        Title="LoginUserWindow" Height="300" Width="400">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ComboBox Name="User" Grid.Row="0" Margin="102,30,20,30" SelectedValue="{Binding User, UpdateSourceTrigger=LostFocus}" />
            <PasswordBox  Name="Password" Grid.Row="1" Margin="102,20,20,35" KeyDown="Password_KeyDown" KeyUp="Password_KeyUp" />
            <Button Name="btlLogin" Grid.Row="2" Margin="20,20,20,39" Content="Вход" Command="{Binding RegisterCommand}" Click="btlLogin_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="49,36,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Height="17" Width="68"/>
            <TextBlock HorizontalAlignment="Left" Margin="49,39,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
