<Window x:Class="InternetMarket.Windows.Documents.ZakazPokupatyaData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetMarket.Windows.Documents"
        mc:Ignorable="d"
        Title="ZakazPokupatyaData" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="AddBtn" Grid.Column="0" Grid.Row="0" Content="Создать" Margin="15" Click="AddBtn_Click"/>
        <Button Name="LoadBtn" Grid.Column="1" Grid.Row="0" Content="Показать документы" Margin="15" Click="LoadBtn_Click"/>
        <DataGrid Name="datagrid" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="6"/>
    </Grid>
</Window>
