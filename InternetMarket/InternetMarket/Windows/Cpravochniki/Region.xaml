<Window x:Class="InternetMarket.Windows.Region"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetMarket.Windows"
        mc:Ignorable="d"
        Title="Region" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="regname" Grid.Row="0" Margin="20"/>
        <ComboBox Name="oblastname" Grid.Row="1" Margin="20"/>
        <ComboBox Name="countrycombo" Grid.Row="2" Margin="20"/>
        <ComboBox Name="citycombo" Grid.Row="3" Margin="20"/>
        <Button Name="btnSet" Grid.Row="4" Margin="20" Click="btnSet_Click" />
    </Grid>
</Window>
