<Window x:Class="InternetMarketClient.Windows.CountrysData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetMarketClient.Windows"
        mc:Ignorable="d"
        Title="CountrysData" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="ContryAddbtn" Grid.Column="0" Grid.Row="0" Margin="20" Content="Add" Click="ContryAddbtn_Click" />
        <Button Name="ContryLoad" Grid.Column="1" Grid.Row="0" Content="Load" Margin="20"  />
        <DataGrid Name="countryDataGrid" Grid.Column="0" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="6"/>
    </Grid>
</Window>
